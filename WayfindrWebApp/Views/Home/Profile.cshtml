@model WayfindrWebApp.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/globals.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/profile.css" />
    <link rel="icon" type="img/png" href="~/img/Logo.png" />
    <script src="~/js/include.js" defer></script>
    <script src="~/js/sidebar.js" defer></script>
    <title>Wayfindr</title>
</head>
<body>
    @Html.Partial("_Header")
    <div class="profile">
        <div class="div">
            <div class="text-wrapper">YOUR PROFILE</div>

            <!-- Profile Picture Preview -->
            <img id="profile-picture"
                 class="rectangle"
                 src="~/img/samplepfp.jpg" 
                 alt="Profile Picture" />

            <!-- Upload Button -->
            <div class="overlap-group">
                <label for="upload-input" class="rectangle-2">
                    <div class="text-wrapper-2">Upload a Photo</div>
                </label>
                <input type="file"
                       id="upload-input"
                       accept="image/png, image/jpeg"
                       style="display: none" />
            </div>
            <form asp-action="Save" asp-controller="User" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="UserId" />
                <div class="overlap">
                    <div class="text-wrapper-3">Profile Information</div>

                    

                    <div class="text-wrapper-4">First Name</div>
                    <input asp-for="FirstName" class="rectangle-3" placeholder="Enter First Name" />

                    <div class="text-wrapper-5">Username</div>
                    <input asp-for="Username" class="rectangle-5" placeholder="Enter Username" />

                    <div class="text-wrapper-6">Gender</div>
                    <select asp-for="Gender" class="rectangle-6">
                        <option value="">Select Gender</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                        <option>Prefer not to say</option>
                    </select>

                    <div class="text-wrapper-7">Last Name</div>
                    <input asp-for="LastName" class="rectangle-4" placeholder="Enter Last Name" />

                    <div class="text-wrapper-8">Contact Information</div>

                    <div class="text-wrapper-9">Email</div>
                    <input asp-for="Email" type="email" class="rectangle-7" placeholder="Enter Email" />

                    <div class="text-wrapper-10">New Password</div>
                    <input asp-for="PasswordHash" type="password" class="rectangle-9" placeholder="Enter New Password" value="" />

                    <div class="text-wrapper-11">Confirm New Password</div>
                    <input type="password" class="rectangle-10" placeholder="Confirm Password" value="" />

                    <div class="text-wrapper-12">Contact Number</div>
                    <input asp-for="ContactNumber" type="tel" class="rectangle-8" placeholder="Enter Contact Number" />
                </div>

                <div class="div-wrapper">
                    <button type="submit" class="text-wrapper-17">Save</button>
                </div>
            </form>

            <div class="text-wrapper-13">Current Stats</div>
            <div class="text-wrapper-14">Assessment/s:</div>
            <div class="text-wrapper-15">Last modified:</div>
            <div class="text-wrapper-16">Current track:</div>
            <div class="no-of-assessments">{no-of-assessments}</div>
            <div class="date">{date}</div>
            <div class="current-career">{current career}</div>
            
            <a href="/">
                <div class="overlap-2">
                    <div class="text-wrapper-18">Back</div>
                </div>
            </a>
            <a href="login" class="overlap-3">
                <div class="text-wrapper-19">Logout</div>
            </a>
        </div>
        @if (TempData["Message"] != null)
        {
            <div class="success-message">@TempData["Message"]</div>
        }

    </div>
    @Html.Partial("_Footer")

</body>
</html>
